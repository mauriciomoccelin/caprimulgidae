{
	"apiVersion": "extensions/v1beta1",
	"kind": "Deployment",
	"metadata": {
		"name": "sqlserver"
	},
	"spec": {
		"replicas": 1,
		"template": {
			"metadata": {
				"labels": {
					"version" : "v2017",
					"app": "sqlserver"
				}
			},
			"spec": {
				"containers": [
					{
						"name": "sqlserver",
						"imagePullPolicy": "Always",
						"image": "microsoft/mssql-server-linux:2017-latest",
						"env": [
							{
								"name": "SA_PASSWORD",
								"value": ""
							},
							{
								"name": "ACCEPT_EULA",
								"value": "Y"
							}
						],
						"ports": [
							{
								"name": "sqlserver",
								"containerPort": 1433
							}
						],
						"volumeMounts": [
              {
                "name": "mssqldb",
                "mountPath": "/var/opt/mssql"
              }
            ]
					}
				],
				"volumes": [
          {
            "name": "mssqldb",
            "persistentVolumeClaim": {
              "claimName": "pvcsqldata"
            }
          }
        ]
			}
		}
	}
}